<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    tools:context=".User.MainActivity">

    <TextView
        android:id="@+id/latar"
        android:layout_width="0dp"
        android:layout_height="479dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/latar_login"
        android:text="@string/app_name"
        android:textColor="#00C90D0D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/latar_textfield_login"
        android:ems="10"
        android:gravity="left|center"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:textColor="#9F9E9E"
        android:textSize="60px"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="@+id/latar"
        app:layout_constraintStart_toStartOf="@+id/latar"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/latar_textfield_login"
        android:ems="10"
        android:gravity="left|center"
        android:hint="Kata Sandi"
        android:inputType="textPersonName|textPassword"
        android:textColor="#9F9E9E"
        android:textSize="60px"
        app:layout_constraintBottom_toTopOf="@+id/masuk"
        app:layout_constraintEnd_toEndOf="@+id/latar"
        app:layout_constraintStart_toStartOf="@+id/latar"
        app:layout_constraintTop_toBottomOf="@+id/username" />


    <Button
        android:id="@+id/masuk"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/button_kotak"
        android:text="Masuk"
        android:textSize="50px"
        app:layout_constraintBottom_toTopOf="@+id/lupa"
        app:layout_constraintEnd_toEndOf="@+id/latar"
        app:layout_constraintStart_toStartOf="@+id/latar"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="31dp"
        android:gravity="center"
        android:text="LOGIN"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/latar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="8dp"
        android:text="Belum punya akun ?"
        android:textColor="#9F9E9E"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/latar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="131dp"
        android:layout_height="122dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lupa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:text="Lupa Kata Sandi ?"
        android:textColor="#9F9E9E"
        android:textSize="50px"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/latar"
        app:layout_constraintStart_toStartOf="@+id/latar" />

    <TextView
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:text="Daftar"
        android:textColor="#9E9F9F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>